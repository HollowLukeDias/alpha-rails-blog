<div class="container">
  <body>
    <div class="row justify-content-center">
      <div class="col-10">
        <%= render 'shared/errors', obj: @article %>
        <%= form_with(model: @article, class: "shadow-lg p-3 mb-5 bg-darkgray rounded", local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :title, class: "col-2 col-form-label" %>
            <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow-sm rounded", placeholder: "Tile of Article"%>
            </div> 
          </div>

          <div class="form-group row">
            <%= f.label :description, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_area :description, rows: 5, class: "form-control shadow-sm rounded", placeholder: "Description of Article"%>
            </div> 
          </div>

          <div class="container">
            <div class="form-group row justify-content-center">
              <%= f.submit class: "btn btn-light btn-lg shadow-sm rounded" %>
            </div>

            <div class="form-group row justify-content-center">
              <%= link_to 'Cancel', articles_path, class: "btn btn-dark btn-lg shadow-sm rounded" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</div>