<div class="container">
  <body>
    <div class="row justify-content-center">
      <div class="col-10">
        <%= form_with(model: @category, class: "shadow-lg p-3 mb-5 bg-darkgray rounded", local: true) do |f| %>

          <div class="form-group row">
            <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :name, class: "form-control shadow-sm rounded", placeholder: "Type the name..."%>
            </div> 
          </div>

          <div class="container">
            <div class="form-group row justify-content-center">
              <%= f.submit "Create", class: "btn btn-light btn-lg shadow-sm rounded" %>
            </div>

            <div class="form-group row justify-content-center">
              <%= link_to 'Cancel', root_path, class: "btn btn-dark btn-lg shadow-sm rounded" %>
            </div>

          </div>
        <% end %>
      </div>
    </div>
  </body>
</div>